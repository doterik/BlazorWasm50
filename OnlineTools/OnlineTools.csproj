<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0-rc.1.20451.17" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.0-rc.1.20451.17" PrivateAssets="all" />
		<PackageReference Include="System.Net.Http.Json" Version="5.0.0-rc.1.20451.14" />
		<PackageReference Include="Meziantou.Framework.ByteSize" Version="1.2.0" />
		<PackageReference Include="Meziantou.Framework.Scheduling" Version="1.0.13" />
		<PackageReference Include="ncrontab" Version="3.3.1" />
		<PackageReference Include="YamlDotNet" Version="8.1.2" />
	</ItemGroup>

	<ItemGroup>
		<BlazorWebAssemblyLazyLoad Include="YamlDotNet" />
	</ItemGroup>

	<Target Name="CopyFiles" BeforeTargets="BeforeBuild">
		<Copy SourceFiles="wwwroot/index.html" DestinationFiles="wwwroot/404.html" />
	</Target>

</Project>
